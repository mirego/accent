{
  "compilerOptions": {
    "allowJs": false,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "rootDirs": ["./src"],
    "strict": true,
    "target": "es2017"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules/**/*"]
}

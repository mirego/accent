<AsyncButton
  title={{@languageSlug}}
  @onClick={{perform this.submitTask @languageSlug}}
  @loading={{this.isSubmitting}}
  @disabled={{this.isMainLanguage}}
  local-class='button'
  class='button button--iconOnly button--link button--filled button--white'
>
  {{inline-svg '/assets/language.svg' class='button-icon'}}
</AsyncButton>
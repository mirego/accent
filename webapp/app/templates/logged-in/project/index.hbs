{{#if this.model.loading}}
  <SkeletonUi::ProgressLine />
{{/if}}

{{#if this.showLoading}}
  <LoadingContent @label={{t 'pods.project.index.loading_content'}} />
{{else}}
  <DashboardRevisions
    @document={{this.selectedDocument}}
    @project={{this.project}}
    @revisions={{this.revisions}}
    @permissions={{this.permissions}}
    @documents={{this.documents}}
    @versions={{this.versions}}
    @selectedDocument={{this.document}}
    @selectedVersion={{this.version}}
    @showDocumentsSelect={{this.showDocumentsSelect}}
    @showVersionsSelect={{this.showVersionsSelect}}
    @onChangeDocument={{fn this.changeDocument}}
    @onChangeVersion={{fn this.changeVersion}}
    @onCorrectAllConflicts={{fn this.correctAllConflicts}}
    @onUncorrectAllConflicts={{fn this.uncorrectAllConflicts}}
  />
{{/if}}
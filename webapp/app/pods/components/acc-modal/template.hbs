<EmberWormhole @to="modals">
  <div class="acc-modal__wrapper">
    <div role="button" class="acc-modal__overlay" {{on "click" (fn @onClose)}}></div>
    <div role="dialog" class="acc-modal__container {{if @small "acc-modal__container--small"}}">
      {{yield}}
    </div>
  </div>
</EmberWormhole>

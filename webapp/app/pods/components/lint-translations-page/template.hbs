{{#if @lintTranslations}}
  <div local-class="content">
    {{#each @lintTranslations key="id" as |lintTranslation|}}
      <LintTranslationsPage::Item @project={{@project}} @lintTranslation={{lintTranslation}} />
    {{/each}}
  </div>
{{else}}
  <div local-class="empty-content">
    <EmptyContent
      @text={{t "components.lint_translations_page.empty_text"}}
    />
  </div>
{{/if}}

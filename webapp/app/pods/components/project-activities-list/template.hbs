{{#if @activities}}
  <ul local-class='list'>
    {{#each @activities key='id' as |activity|}}
      <ActivityItem
        @compact={{@compact}}
        @permissions={{@permissions}}
        @showTranslationLink={{true}}
        @componentTranslationPrefix='project_activities_list_item'
        @activity={{activity}}
        @project={{@project}}
      />
    {{/each}}
  </ul>
{{else}}
  <div local-class='empty-content'>
    <EmptyContent @center={{true}} @iconPath='assets/empty.svg' @text={{t 'components.project_activities_list.empty_activities_text'}} />
  </div>
{{/if}}
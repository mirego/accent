<div local-class="revision-selector">
  {{#if revisions.length}}
    <div>
      <AccSelect
        @searchEnabled={{false}}
        @selected={{revisionValue}}
        @options={{mappedRevisions}}
        @onchange={{action "selectRevision" value="value"}}
      />
      {{#if hasManyRevisions}}
        <span class="otherLanguages">
          {{t
            "components.revision_selector.languages_count"
            count=otherRevisionsCount
          }}
        </span>
      {{/if}}
    </div>
  {{/if}}
</div>

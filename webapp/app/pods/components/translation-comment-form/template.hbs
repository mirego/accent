<div local-class="translation-comment-form">
  <form
    {{on "submit" (perform this.submitTask)}}
    local-class="form"
  >
    {{#if this.error}}
      <span local-class="error">
        {{t "components.translation_comment_form.submit_error"}}
      </span>
    {{/if}}

    <div local-class="form-content">
      <textarea
        {{autoresize this.text}}
        {{on-key "cmd+Enter" (perform this.submitTask)}}
        {{on "input" this.setText}}
        local-class="inputText"
        placeholder={{t "components.translation_comment_form.comment_placeholder"}}
        rows="3"
        disabled={{this.submitTask.isRunning}}
        value={{this.text}}
      />
      <AsyncButton
        @loading={{this.submitTask.isRunning}}
        class="button button--filled"
        {{on "click" (perform this.submitTask)}}
      >
        {{t "components.translation_comment_form.comment_button"}}
      </AsyncButton>
    </div>
  </form>
</div>

<div local-class="conflicts-filters">
  <div class="filters">
    <form local-class="filters-wrapper" {{on "submit" (fn this.submitForm)}}>
      <div local-class="filters-content">
        <div class="queryForm" local-class="queryForm">
          {{inline-svg "/assets/search.svg" local-class="search-icon"}}

          <input
            local-class="input"
            type="text"
            placeholder={{t "components.conflicts_filters.input_placeholder_text"}}
            value={{this.debouncedQuery}}
            {{on "change" this.setDebouncedQuery}}
          >
        </div>

        <div local-class="queryForm-filters">
          <div local-class="queryForm-filters-column">
            {{#if this.showDocumentsSelect}}
              <div local-class="queryForm-filter">
                <div local-class="queryForm-filter-select">
                  <AccSelect
                    @matchTriggerWidth={{false}}
                    @searchEnabled={{false}}
                    @selected={{this.documentValue}}
                    @options={{this.mappedDocuments}}
                    @onchange={{fn @onChangeDocument}}
                  />
                </div>
              </div>
            {{/if}}

            {{#if this.showReferenceRevisionsSelect}}
              <div local-class="queryForm-filter">
                <div local-class="queryForm-filter-select">
                  <AccSelect
                    @matchTriggerWidth={{false}}
                    @searchEnabled={{false}}
                    @selected={{this.referenceValue}}
                    @options={{this.mappedReferenceRevisions}}
                    @onchange={{fn @onChangeReference}}
                  />
                </div>
              </div>
            {{/if}}
          </div>
        </div>
      </div>

      {{#if @meta.totalEntries}}
        <span local-class="totalEntries">
          {{t
            "components.conflicts_filters.total_entries_count"
            count=@meta.totalEntries
          }}
        </span>
      {{/if}}
    </form>
  </div>
</div>

{{#unless this.withSelectedTranslations}}
  <TranslationsFilter
    @query={{this.query}}
    @document={{this.document}}
    @documents={{this.model.project.documents}}
    @version={{this.version}}
    @versions={{this.model.project.versions.entries}}
    @onChangeQuery={{fn this.changeQuery}}
    @onChangeDocument={{fn this.changeDocument}}
    @onChangeVersion={{fn this.changeVersion}}
    @meta={{this.model.project.revision.translations.meta}}
  />
{{/unless}}

{{#if this.withSelectedTranslations}}
  <JiptTranslationsFilteredTitle @count={{this.filteredTranslations.length}} />
{{/if}}

<JiptTranslationsList @translations={{this.filteredTranslations}} />

{{#unless this.withSelectedTranslations}}
  <ResourcePagination
    @meta={{this.model.project.revision.translations.meta}}
    @onSelectPage={{fn this.selectPage}}
  />
{{/unless}}

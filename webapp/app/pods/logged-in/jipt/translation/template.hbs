<JiptTranslation>
  {{#if this.showSkeleton}}
    <SkeletonUi::TranslationSplashTitle />
  {{else}}
    <JiptBackToTranslations />
    <TranslationSplashTitle
      @project={{this.model.project}}
      @translation={{this.model.translation}}
      @withRevisionLink={{false}}
    />
  {{/if}}

  {{#if this.model.loading}}
    <SkeletonUi::ProgressLine />
  {{/if}}

  {{outlet}}
</JiptTranslation>

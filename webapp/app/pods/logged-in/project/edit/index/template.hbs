{{#if this.showLoading}}
  <LoadingContent @label={{t "pods.project.edit.loading_content"}} />
{{else}}
  <ProjectSettings::Form
    @project={{this.project}}
    @permissions={{this.permissions}}
    @onUpdateProject={{fn this.updateProject}}
  />

  <ProjectSettings::LinksList
    @project={{this.project}}
    @permissions={{this.permissions}}
  />

  {{#if (get this.permissions "delete_project")}}
    <ProjectSettings::DeleteForm
      @project={{this.project}}
      @onSubmit={{fn this.deleteProject}}
    />
  {{/if}}
{{/if}}

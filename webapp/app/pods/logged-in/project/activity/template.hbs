{{#if this.model.loading}}
  <LoadingContent @label={{t "pods.project.activities.show.loading_content"}} />
{{else}}
  <ProjectActivity
    @permissions={{this.permissions}}
    @showTranslationLink={{true}}
    @componentTranslationPrefix="project_activities_list_item"
    @project={{this.model.project}}
    @activity={{this.model.activity}}
    @onRollback={{fn this.rollback}}
  />
{{/if}}

{{#unless this.translation.removed}}
  <TranslationEdit
    @translation={{this.model.translation}}
    @project={{this.model.project}}
    @permissions={{this.permissions}}
    @onUpdateText={{fn this.updateText}}
    @onCorrectConflict={{fn this.correctConflict}}
    @onUncorrectConflict={{fn this.uncorrectConflict}}
  />
{{else}}
  <RemovedTranslationEdit @translation={{this.model.translation}} />
{{/unless}}

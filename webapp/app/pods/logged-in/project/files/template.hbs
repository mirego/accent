{{#if model.loading}}
  <SkeletonUi::ProgressLine />
{{/if}}

{{#if showSkeleton}}
  <SkeletonUi::DocumentsList />
{{else}}
  <DocumentsList
    @permissions={{permissions}}
    @documents={{model.documents.entries}}
    @project={{model.project}}
    @onDelete={{fn this.deleteDocument}}
    @onUpdate={{fn this.updateDocument}}
  />

  {{#if (get permissions "sync")}}
    <DocumentsAddButton @project={{model.project}} />
  {{/if}}

  <ResourcePagination
    @meta={{model.documents.meta}}
    @onSelectPage={{fn this.selectPage}}
  />

  {{outlet}}
{{/if}}
